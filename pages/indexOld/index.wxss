/* header */
.header-wrap {
  height: 76rpx;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1px solid #fcfcfc;
}

/* 用户信息 */
.userinfo {
  height: 100%;
  flex:1;
  display: flex;
  align-items: center;
}

.userinfo .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.userinfo .nickname {
  height:100%;
  flex:1;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  font-weight: normal;
  background: #fff;
  /* background: pink; */
  padding: 0;
}

/* 游戏记录 */
.game-record {
  height:100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #047dfc;
}

/*tab切换*/
.swiper-tab {
  display: flex;
  background-color: #fff;
  padding: 0 32rpx;
  border-bottom: 1px solid #dedede;
}

.swiper-tab-list {
  width: 25%;
  font-size: 30rpx;
}

.swiper-tab-list>text {
  display: inline-block;
  color: #999;
  padding: 20rpx 0;
  z-index: 0;
}

.on>text {
  color: #F73F3F;
  border-bottom: 5rpx solid #F73F3F;
}

/* 自定义输入框 */
.input-box-wrap{
  background-color: #fff;
  padding: 20rpx 32rpx;
  margin-top: 20rpx;
}
.input-box {
  position: relative;
  width: 100%;
  height: 280rpx;
  font-size: 32rpx;
  line-height: 1;
  word-break: break-all;
}

.input-content {
  font-size: 32rpx;
  line-height: 22rpx;
  word-break: break-all;
  white-space: pre-wrap;
  z-index: 1;
}
.cursor-wrap{
  position: relative;
  display: inline-block;
  vertical-align: middle;
  z-index: 2;
}
.cursor {
  display: inline-block;
  width: 4rpx;
  height: 32rpx;
  background: green;
  border-radius: 6rpx;
  opacity: 0;
  vertical-align: bottom;
}
.cursor-animate {
  animation: twinkling 1s infinite;
}
.space-cursor {
  display: inline-block;
  width: 4rpx;
  height: 32rpx;
  background: green;
  border-radius: 6rpx;
}
/* 粘贴提示 */
.pasteTip{
  position: absolute;
  top:50rpx;
  left: 0rpx;
  background: #fff;
  font-size: 28rpx;
  color:#999;
  letter-spacing: 3rpx;
  white-space: nowrap;
  padding: 6rpx 12rpx;
  box-shadow:0 3rpx 6rpx -4rpx rgba(0,0,0,.12), 0 6rpx 16rpx 0 rgba(0,0,0,.08), 0 9rpx 28rpx 8rpx rgba(0,0,0,.05);
  border-radius: 8rpx;
  z-index: 3;
}
.pasteTip .arrow{
  position: absolute;
  top:-8rpx;
  left: 50%;
  display: block;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  box-shadow: -4rpx -4rpx 5rpx rgba(0,0,0,.06);
  transform: translateX(-50%) rotate(45deg);
}
.error-msg {
  font-size: 30rpx;
  padding: 10rpx 32rpx 0;
}

/* 自定义键盘 */
.keyboard {
  padding: 14rpx;
  background: rgba(210, 214, 220, 1);
  box-sizing: border-box;
  transition: all 400ms ease-in-out;
}

.keyboard-main {
  display: flex;
}

.top-row {
  display: flex;
  color: #53D228;
  font-size: 34rpx;
}
.top-row .inputClear{
  color: #999;
  padding: 10rpx 12rpx 12rpx;
}
.top-row .inputConfirm{
  flex:1;
  text-align: right;
  padding: 10rpx 12rpx 12rpx;
}



.left-part {
  width: 80%;
}

.right-part {
  flex: 1;
  border-left: 2px solid #eee;
}

.right-part .input-btn {
  padding: 11rpx 0;
}

.keyboard-line {
  display: flex;
}

.keyboard-line>view {
  width: 100%;
  padding: 7rpx;
}

.input-btn {
  border-radius: 13rpx;
  background: rgba(255, 255, 255, 1);
  font-size: 42rpx;
  font-weight: 400;
  color: rgba(3, 3, 3, 1);
  text-align: center;
  padding: 22rpx 0;
}



.delInput {
  background: none;
}

.active {
  background: rgba(162, 171, 183, 1);
}

/* 描述文本 */
.desc {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 20rpx 32rpx;
}

.desc .title {
  color: #333;
}

.desc .example {
  display: flex;
  justify-content: space-between;
}

.desc .example>text {
  color: #047DFC;
}
.question-icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #999;
  border: 1px solid #999;
  border-radius: 50%;
  margin-left: 12rpx;
}

/* 生成二维码 */
.createQRbtn {
  display: flex;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  background: #fca1a2;
  border-radius: 45px;
  padding: 20rpx 0;
  margin: 30rpx 32rpx;
}



@-webkit-keyframes twinkling {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

/* 弹框 */
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  opacity: 0.65;
  background: #000;
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 500rpx;
  color: #333;
  background: #fff;
  margin-left: 125rpx;
  transform: translateY(300%);
  transition: all 0.4s ease;
  border-radius: 24rpx;
  z-index: 11;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog__container .title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-top: 30rpx;
}

.zan-dialog__container .content {
  font-size: 30rpx;
  padding: 30rpx 40rpx;
}
.zan-dialog__container .content .number{
  min-height: 80rpx;
  max-height: 400rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.zan-dialog__container .content .number >text{
  font-size: 30rpx;
  line-height: 20rpx;
}

.zan-dialog__container .footer {
  display: flex;
  padding: 6rpx 0;
  border-top: 1rpx solid rgba(0, 0, 0, .2);
}

.zan-dialog__container .footer .btn {
  flex: 1;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding: 15rpx 0;
  border-right: 1rpx solid rgba(0, 0, 0, .2);
}

