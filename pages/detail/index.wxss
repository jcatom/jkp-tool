
.top-wrap {
  width: 660rpx;
  height: 825rpx;
  position: relative;
  margin: 40rpx auto 0;
}

/* 背景图 */
.top-wrap .bg {
  width: 100%;
  height: 100%;
}
/* 标题 */
.top-wrap .title {
  position: absolute;
  top:90rpx;
  left:220rpx;
  font-size: 30rpx;
  font-family: PingFang, PingFang-SC;
  color: #333;
}
.top-wrap .remark {
  font-size: 24rpx;
  color: #999;
}
/* 二维码 */
.top-wrap .qr-wrap {
  width: 460rpx;
  height: 460rpx;
  position: absolute;
  top: 220rpx;
  left: 100rpx;
}
.top-wrap .qr-wrap .qrcode-img{
  width: 100%;
  height: 100%;
}

/* 内容 */
.content {
  width: 600rpx;
  /* height: 248rpx; */
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: -20rpx auto 20rpx;
}

.content>view {
  display: flex;
  margin: 16rpx 0;
}

.content .title {
  color: #333;
  margin-right: 10rpx;
}

.content .value {
  color: #666;
}

/* 按钮 */
.btn-wrap {
  width: 660rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.btn-wrap .btn {
  width: 320rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  background: #20be23;
  border-radius: 45px;
  box-shadow: 0px 4px 0px 0px #0eaa11;
  margin-bottom: 20rpx;
}

.btn-wrap .btn.orange {
  background: #ffaa38;
  box-shadow: 0px 4px 0px 0px #f79410;
}



/* 分享图片canvas容器 */
.share-img-containter{
  width: 100%;
  height: 1280rpx;
  position: relative;
  /* background: pink; */
  display: flex;
  justify-content: center;
  margin: 30rpx auto 30rpx;
}
/* 二维码canvas容器 */
.qrcode-containter{
  width: 460rpx;
  height: 460rpx;
}

