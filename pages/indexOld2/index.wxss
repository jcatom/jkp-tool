/* 描述文本 */
.desc {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 0rpx 32rpx;
}

.desc .title {
  color: #333;
}

.desc .example {
  display: flex;
  justify-content: space-between;
}

.desc .example>text {
  color: #047DFC;
}
.question-icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #999;
  border: 1px solid #999;
  border-radius: 50%;
  margin-left: 12rpx;
}

/* 生成二维码 */
.createQRbtn {
  display: flex;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  background: #fca1a2;
  border-radius: 45px;
  padding: 20rpx 0;
  margin: 30rpx 32rpx;
}


/* 弹框 */
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  opacity: 0.65;
  background: #000;
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 500rpx;
  color: #333;
  background: #fff;
  margin-left: 125rpx;
  transform: translateY(300%);
  transition: all 0.4s ease;
  border-radius: 24rpx;
  z-index: 11;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog__container .title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-top: 30rpx;
}

.zan-dialog__container .content {
  font-size: 32rpx;
  padding: 30rpx 40rpx;
}
.zan-dialog__container .content .number{
  display: flex;
  flex-direction: column;
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: 20rpx;
}
.zan-dialog__container .content .number >text{
  font-size: 30rpx;
  line-height: 30rpx;
}

.zan-dialog__container .footer {
  display: flex;
  padding: 6rpx 0;
  border-top: 1rpx solid rgba(0, 0, 0, .2);
}

.zan-dialog__container .footer .btn {
  flex: 1;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  padding: 15rpx 0;
  border-right: 1rpx solid rgba(0, 0, 0, .2);
}

